{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@nuxt/typescript-build",
      "@nuxtjs/axios",
      "@types/node",
    ]
  },
  "include": [
    "nuxt.config.ts",
    "modules/**/*.ts",
    "modules/**/*.js",
    "components/**/*",
    "pages/**/*.vue",
    "pages/**/*.js",
    "pages/**/*.ts",
    "types/**/*",
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
  ],
  "vueCompilerOptions": {
    "target": 2.7,
    "strictTemplates": true,
    "experimentalAdditionalLanguageModules": ["volar-component-types"],
  }
}
